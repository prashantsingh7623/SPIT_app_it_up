<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="adbudh.spit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="S.P.I.T Events"
        android:roundIcon="@mipmap/spit_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".admin.AllVolunteers"></activity>
        <activity android:name=".user.UserLandingActivity" />
        <activity android:name=".base.EventDetails" />
        <activity android:name=".admin.Volunteer" />
        <activity
            android:name=".admin.RegisterEvent"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".base.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".admin.AdminLandingActivity"
            android:windowSoftInputMode="stateHidden" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>